<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Contact Information Section -->
    <TextView
        android:id="@+id/text_contact_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact Information"
        android:background="@drawable/round_white_button"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="16dp" />

    <!-- Email -->
    <TextView
        android:id="@+id/text_email"
        android:background="@drawable/round_white_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email: example@example.com"
        android:paddingStart="16dp"
        android:paddingTop="8dp" />

    <!-- Phone -->
    <TextView
        android:id="@+id/text_phone"
        android:background="@drawable/round_white_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone: +1234567890"
        android:paddingStart="16dp"
        android:paddingTop="8dp" />

    <!-- Address -->
    <TextView
        android:id="@+id/text_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address: 123 Main Street, City, Country"
        android:paddingStart="16dp"
        android:background="@drawable/round_white_button"
        android:paddingTop="8dp" />

    <!-- Map Section -->
    <!-- Include a MapView here if you want to display a map -->

    <!-- Social Media Links Section -->
    <TextView
        android:id="@+id/text_social_media"
        android:background="@drawable/round_white_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Follow Us on Social Media"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="16dp" />

    <!-- Links to Social Media Profiles -->
    <TextView
        android:id="@+id/text_facebook"
        android:background="@drawable/round_white_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Facebook: @YourPage"
        android:paddingStart="16dp"
        android:paddingTop="8dp" />

    <TextView
        android:id="@+id/text_twitter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Twitter: @YourHandle"
        android:paddingStart="16dp"
        android:background="@drawable/round_white_button"
        android:paddingTop="8dp" />

    <!-- Add other social media links here -->

    <!-- FAQ Section -->
    <TextView
        android:id="@+id/text_faq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FAQ"
        android:background="@drawable/round_white_button"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="16dp" />

    <!-- FAQ items -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="8dp">

        <!-- FAQ Item 1 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_white_button"
            android:text="Q: What are your business hours?"
            android:textStyle="bold" />

        <TextView
            android:background="@drawable/round_white_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A: Our business hours are Monday to Friday, 9 AM to 5 PM." />

        <!-- FAQ Item 2 -->
        <TextView
            android:background="@drawable/round_white_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Q: How can I contact customer support?"
            android:textStyle="bold" />

        <TextView
            android:background="@drawable/round_white_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A: You can contact our customer support team at support@example.com." />

        <!-- Add more FAQ items as needed -->

    </LinearLayout>

</LinearLayout>
