<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="379dp"
        android:layout_height="256dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/welcome_screen" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="196dp"
        android:layout_height="49dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/aclonica"
        android:text="Welcome"
        android:textAlignment="center"
        android:textColor="#025725"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Loginbutton"
        android:layout_width="340dp"
        android:layout_height="56dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/greenbutton"
        android:fontFamily="@font/amaranth_bold"
        android:text="Log in"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PasswordL" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/EmailL"
        android:layout_width="362dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:hintEnabled="true"
        app:hintAnimationEnabled="true"
        app:layout_constraintBottom_toTopOf="@+id/PasswordL"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:layout_constraintVertical_bias="0.28">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittextshape"
            android:backgroundTint="#D8FAE6"
            android:drawableLeft="@drawable/email"
            android:drawablePadding="15sp"
            android:elevation="10dp"
            android:ems="10"
            android:fontFamily="@font/amaranth"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingLeft="15sp"
            android:textColorHint="#C51162" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/PasswordL"
        android:layout_width="362dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"

        app:hintEnabled="true"
        app:hintAnimationEnabled="true"
        app:endIconMode="password_toggle"
        app:layout_constraintEnd_toEndOf="@+id/EmailL"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/EmailL"
        app:layout_constraintTop_toBottomOf="@+id/EmailL"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittextshape"
            android:backgroundTint="#D8FAE6"
            android:drawableStart="@drawable/password_svgrepo_com"
            android:drawableLeft="@drawable/password_svgrepo_com"
            android:drawablePadding="15sp"
            android:elevation="10dp"
            android:ems="10"
            android:fontFamily="@font/amaranth"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="15sp"
            android:paddingEnd="16dp"
            android:paddingRight="16dp"
            style="@style/Widget.AppCompat.AutoCompleteTextView"
            android:textColorHint="#C51162" />

    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/signUpText"
        android:layout_width="374dp"
        android:layout_height="70dp"
        android:layout_marginTop="15dp"
        android:clickable="true"
        android:fontFamily="@font/belgrano"
        android:text="don't have an account? Sign up"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#064721"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/Loginbutton"
        app:layout_constraintHorizontal_bias="0.558"
        app:layout_constraintStart_toStartOf="@+id/Loginbutton"
        app:layout_constraintTop_toBottomOf="@+id/Loginbutton" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/aclonica"
        android:text="Login To Your Account"
        android:textAlignment="center"
        android:textColor="#0AA54A"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/button"
        android:layout_width="233dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="#00000000"
        android:elevation="10dp"
        android:gravity="right"
        android:paddingLeft="15dp"
        android:text="Forgot Password?"
        android:textAlignment="textEnd"
        android:textColor="#000E0E0E"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/PasswordL"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PasswordL" />

</androidx.constraintlayout.widget.ConstraintLayout>